{{#contentFor "PAGE_LEVEL_STYLES"}}
<link rel="stylesheet" href="/styles/company.css">
{{/contentFor}}
{{#contentFor "PAGE_LEVEL_SCRIPTS"}}
<script>
  $(document).ready(function () {
    $('.company-team-image__item-tag').on('mouseenter', function () {
      var tagId = $(this).attr('id');
      var index = tagId.replace('companyTeamMembersCell', '');

      if ($('#companyTeamMembersInfo' + index).parents('.our-team').length > 0) {
        $('.our-team .company-team__member').removeClass('show');
        $('.our-team .company-team__member').addClass('hide');
      } else if ($('#companyTeamMembersInfo' + index).parents('.science-advisors').length > 0) {
        $('.science-advisors .company-team__member').removeClass('show');
        $('.science-advisors .company-team__member').addClass('hide');
      }

      $('#companyTeamMembersInfo' + index).removeClass('hide');
      $('#companyTeamMembersInfo' + index).addClass('show');
    });

    $('.company-team-image__item-tag').on('mouseout', function () {
      var tagId = $(this).attr('id');
      var index = tagId.replace('companyTeamMembersCell', '');

      $('#companyTeamMembersInfo' + index).removeClass('show');
    });

    $('.science-advisors .company-team__member').eq(0).removeClass('hide');
    $('.our-team .company-team__member').eq(0).removeClass('hide');
  });
</script>
{{/contentFor}}

