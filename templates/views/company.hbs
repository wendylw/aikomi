{{#contentFor "PAGE_LEVEL_STYLES"}}
<link rel="stylesheet" href="/styles/company.css">
{{/contentFor}}
{{#contentFor "PAGE_LEVEL_SCRIPTS"}}
<script>
  $(document).ready(function () {
    $('.company-team-image__item-tag.first').on('mouseenter', function () {
      $('.our-team .company-team__member').addClass('show');
    });

    $('.company-team-image__item-tag.first').on('mouseout', function () {
      $('.our-team .company-team__member').removeClass('show');
    });

    $('.company-team-image__item-tag.second').on('mouseenter', function () {
      $('.science-advisors .company-team__member').addClass('show');
    });

    $('.company-team-image__item-tag.second').on('mouseout', function () {
      $('.science-advisors .company-team__member').removeClass('show');
    });

    $('.company-team__member').eq(0).removeClass('hide');
  });
</script>
{{/contentFor}}

