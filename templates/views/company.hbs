<main class="main">
  <div data-aos="fade-up">
    <section class="our-team section">
      <div class="container grid flex-middle">
        <div class="width-1-2">
          <h2 class="company-section__title text-size-bigger text-theme-color text-weight-bold">OUR TEAM</h2>
        </div>

        {{#each company.companyTeamMembers}}
          {{#unless this.isScientificAdvisors}}
          <div id="companyTeamMembersInfo{{@index}}" class="company-team__member width-1-2 flex flex-top hide">
            <div class="company-team__avatar flex__shrink-fixed">
              <img src="/uploads/company/{{{this.image.filename}}}" alt="">
            </div>
            <div class="company-team__content">
              <h5 class="text-theme-color">{{this.title}}</h5>
              <p class="company-team__name text-weight-bold">{{this.name}}</p>
              <i class="company-team__divider divider__horizontal-block"></i>
              <div>
                <p class="text-line-height text-weight-light">{{this.description}}</p>
              </div>
            </div>
          </div>
          {{/unless}}
        {{/each}}

      </div>
    </section>
  </div>

